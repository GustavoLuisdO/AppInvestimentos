@model Investimentos.Models.Carteira
@{
    ViewData["Title"] = "Detalhes";
}

<h2 class="titulo">@ViewData["Title"]</h2>

<hr />

<div>
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.PapelId)</dt>
        <dd>@Html.DisplayFor(model => model.Papel.Nome)</dd>

        <dt>@Html.DisplayNameFor(model => model.Quantidade)</dt>
        <dd>@Html.DisplayFor(model => model.Quantidade)</dd>

        <dt>@Html.DisplayNameFor(model => model.PrecoMedio)</dt>
