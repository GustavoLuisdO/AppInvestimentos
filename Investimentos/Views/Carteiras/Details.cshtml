@model Investimentos.Models.Carteira
@{
    ViewData["Title"] = "Detalhes";
}

<h2 class="titulo">@ViewData["Title"]</h2>

<hr />

<div>
    <div class="panel panel-default">
        <div class="panel-body">
            <blockquote>

                <p>@Html.DisplayFor(model => model.Papel.Nome)</p>

                <footer>
                    <span>@Html.DisplayNameFor(model=> model.Quantidade) &emsp;&emsp;</span>
                    <strong>@Html.DisplayFor(model => model.Quantidade)</strong>
                </footer>

                <footer>
                    <span>@Html.DisplayNameFor(model=> model.PrecoMedio) &emsp;&nbsp;&nbsp;&nbsp;</span>
                    <strong>R$ @Html.DisplayFor(model => model.PrecoMedio)</strong>
                </footer>

            </blockquote>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-default link-btn">Editar</a>
    <a asp-action="Index">Voltar à Lista</a>
</div>