@model Investimentos.Models.Carteira
@{
    ViewData["Title"] = "Criar Operação";
}

<h2 class="titulo">@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="PapelId" class="control-label"></label>
                <select asp-for="PapelId" class="form-control" asp-items="@(new SelectList(ViewBag.Papeis, "Id", "Nome"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="Quantidade" class="control-label"></label>
                <input asp-for="Quantidade" class="form-control" min="1" />
                <span asp-validation-for="Quantidade" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecoMedio" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-addon">R$</span>
                    <input asp-for="PrecoMedio" class="form-control" />
                </div>
                <span asp-validation-for="PrecoMedio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Criar</button>
            </div>

        </form>

    </div>
    <div class="col-md-3"></div>
</div>
<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}