@model IEnumerable<Investimentos.Models.Carteira>
@{
    ViewData["Title"] = "Carteira";
}

<h2 class="titulo">@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PapelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoMedio)
            </th>
            <th>
                <div class="panel panel-default" style="margin: 0;">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <strong>Total Investido = R$ @Model.Sum(obj => obj.Total()).ToString("F2")</strong>
                            <a asp-action="Create" id="criar-carteira" class="btn btn-sm btn-default">Criar Novo</a>
                        </h4>
                    </div>
                </div>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(itemModel => item.PapelId)
                </td>
                <td>
                    @Html.DisplayFor(itemModel => item.Quantidade)
                </td>
                <td>
                    R$ @Html.DisplayFor(itemModel => item.PrecoMedio)
                </td>
                <td class="btns" style="width: 30%;">
                    <abbr title="Editar"><a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen"></i></a></abbr> |
                    <abbr title="Detalhes"><a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a></abbr> |
                    <abbr title="Excluir"><a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a></abbr>
                </td>
            </tr>
        }
    </tbody>
</table>