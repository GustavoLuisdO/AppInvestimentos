@model Investimentos.Models.Papel
@{
    ViewData["Title"] = "Criar Papel";
}

<h2 class="titulo">@ViewData["Title"]</h2>

<hr />

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TipoPapelId" class="control-label"></label>
                <select asp-for="TipoPapelId" class="form-control" asp-items="@(new SelectList(ViewBag.TipoPapeis, "Id", "Tipo"))"></select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-default">Criar</button>
            </div>

        </form>

    </div>
    <div class="col-md-3"></div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}